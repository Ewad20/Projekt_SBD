@page
@model ZwierzePlus.Pages.LoginModel

<h2 class="mt-4">Zaloguj się</h2>

@if (Model.Input != null && !ModelState.IsValid)
{
    <div class="alert alert-danger">
        <p><strong>Error!</strong> Please check the form for errors.</p>
         <ul>
            @foreach (var key in ModelState.Keys)
            {
                foreach (var error in ModelState[key].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<form method="post" class="row g-3">
    <div class="col-md-6 mb-3">
        <label asp-for="Input.email" class="form-label">Email:</label>
        <input asp-for="Input.email" class="form-control form-control-sm" />
        <span asp-validation-for="Input.email" class="text-danger"></span>
    </div>

    <div class="col-md-6 mb-3">
        <label asp-for="Input.haslo" class="form-label">Hasło:</label>
        <input asp-for="Input.haslo" type="password" class="form-control form-control-sm" />
        <span asp-validation-for="Input.haslo" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Log in</button>
    </div>
</form>
