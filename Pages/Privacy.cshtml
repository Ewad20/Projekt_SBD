@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<style>
    body {
        background-image: url('https://media-eu.husse.com/media/7d/1c/f9/1636116400/d_dog_cat_together_home_2.jpg');
        background-position: center; /* Ustawia obrazek na środku tła */
        background-size: cover; /* Dostosuj rozmiar obrazka do wielkości okna przeglądarki */
        background-repeat: no-repeat; /* Zapobiega powtarzaniu obrazka */
        color: white; /* Kolor tekstu na tle obrazka */
        text-align: center; /* Wyśrodkuj tekst na środku strony */
        overflow-x: hidden;
    }

    h1, p {
        background-color: rgba(51, 51, 51, 0.7); /* Kolor wypełnienia z przezroczystością */
        padding: 10px; /* Dodaj odstępy od obramowania tekstu */
        margin: 10px; /* Dodaj margines wokół tekstu */
    }
</style>

<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>
