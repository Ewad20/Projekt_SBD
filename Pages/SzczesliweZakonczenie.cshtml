@page
@model SzczesliweZakonczenie

<h2 class="mt-4">Szczęśliwe Zakończenie</h2>

<form method="post" class="row g-3">
    <div class="col-md-6">
        <div class="form-group mt-4">
            <label asp-for="Zakonczenie.opis">Opis:</label>
            <textarea asp-for="Zakonczenie.opis" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Zakonczenie.opis" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Zdjecie.link">Zdjęcie:</label>
            <input asp-for="Zdjecie.link" class="form-control" />
            <span asp-validation-for="Zdjecie.link" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success mt-3">Dodaj</button>
    </div>
</form>
